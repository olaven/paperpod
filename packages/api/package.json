{
  "name": "@paperpod/api",
  "license": "UNLICENSED",
  "version": "0.0.1",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "dev": "yarn migration:up && ts-node-dev src/index.ts",
    "test": "yarn migration:up && jest --detectOpenHandles --forceExit",
    "test:ci": "yarn migration:up && yarn test",
    "test:debug": "node --inspect-brk jest --detectOpenHandles --forceExit --runInBand",
    "build": "tsc",
    "migration": "node-pg-migrate --tsconfig ./tsconfig.json",
    "migration:up": "yarn migration up --create-schema --schema api",
    "migration:create": "yarn migration create"
  },
  "dependencies": {
    "@paperpod/common": "0.0.1",
    "@paperpod/converter": "0.0.1",
    "@paperpod/server": "0.0.1",
    "express": "^4.17.1",
    "faker": "^5.5.3",
    "nanoid": "^3.1.20",
    "node-kall": "^1.0.83",
    "node-pg-migrate": "^5.9.0",
    "ts-node": "^9.1.1"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.22",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.14.22",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/supertest": "^2.0.10",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
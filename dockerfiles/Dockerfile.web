FROM node:10-alpine

WORKDIR /app

COPY ./package.json .
COPY ./yarn.lock .
COPY ./tsconfig.json .
COPY ./packages/ui /app/packages/ui
COPY ./packages/frontend /app/packages/frontend
COPY ./packages/common /app/packages/common
COPY ./packages/web /app/packages/web

RUN yarn install  
RUN yarn web build 
ENV NODE_ENV production
CMD ["yarn", "web", "start"]